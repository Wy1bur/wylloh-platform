      <control type="label" id="1">
        <description>dialog header</description>
        <posx>40</posx>
        <posy>30</posy>
        <width>520</width>
        <height>30</height>
        <align>center</align>
        <aligny>center</aligny>
        <font>font28_title</font>
        <textcolor>blue</textcolor>
        <label>$LOCALIZE[30527]</label>
      </control>
      <!-- QR code image -->
      <control type="image" id="2">
