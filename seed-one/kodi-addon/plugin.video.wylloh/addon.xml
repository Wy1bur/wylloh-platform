<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.wylloh" name="Wylloh" version="0.1.0" provider-name="Wylloh Team">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.requests" version="2.22.0"/>
        <import addon="script.module.routing" version="0.2.3"/>
        <import addon="script.module.pycryptodome" version="3.4.3"/>
        <import addon="script.module.pillow" version="8.0.0" optional="true"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.service" library="service.py" />
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Wylloh - Blockchain-based Media Licensing Platform</summary>
        <description lang="en_GB">Access your licensed content from the Wylloh platform. Verify ownership through blockchain tokens and stream high-quality content with integrated digital rights management.</description>
        <disclaimer lang="en_GB">This addon requires a Wylloh account and token ownership for content access.</disclaimer>
        <language>en</language>
        <platform>all</platform>
        <license>Proprietary</license>
        <forum>https://forum.wylloh.com</forum>
        <website>https://wylloh.com</website>
        <email>support@wylloh.com</email>
        <source>https://github.com/Wy1bur/wylloh-platform</source>
        <news>v0.1.0 (2025-03-03)
- Initial release
- Token verification integration
- Content playback with DRM support
- Wallet connection
- QR code-based wallet connection
        </news>
        <assets>
            <icon>resources/media/icon.png</icon>
            <fanart>resources/media/fanart.jpg</fanart>
            <screenshot>resources/media/screenshots/screenshot-01.jpg</screenshot>
            <screenshot>resources/media/screenshots/screenshot-02.jpg</screenshot>
            <screenshot>resources/media/screenshots/screenshot-03.jpg</screenshot>
        </assets>
    </extension>
</addon>