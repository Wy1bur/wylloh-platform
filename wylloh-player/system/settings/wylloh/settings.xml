<settings version="1">
  <section id="wylloh">
    <category id="wylloh" label="30500" help="">
      <group id="1" label="">
        <setting id="wylloh.api_url" type="string" label="30501" help="30502">
          <level>0</level>
          <default>http://localhost:3333/api/</default>
          <control type="edit" format="string" />
        </setting>
        <setting id="wylloh.auto_connect" type="boolean" label="30503" help="30504">
          <level>0</level>
          <default>false</default>
          <control type="toggle" />
        </setting>
        <setting id="wylloh.show_overlay" type="boolean" label="30505" help="30506">
          <level>0</level>
          <default>true</default>
          <control type="toggle" />
        </setting>
      </group>
      <group id="2" label="30507">
        <setting id="wylloh.wallet_status" type="string" label="30508" help="">
          <level>0</level>
          <default>30509</default>
          <constraints>
            <options>
              <option label="30509">not_connected</option>
              <option label="30510">connecting</option>
              <option label="30511">connected</option>
            </options>
          </constraints>
          <control type="spinner" format="string" />
          <dependencies>
            <dependency type="visible">
              <condition operator="is" setting="wylloh.wallet_address" comparing="">false</condition>
            </dependency>
          </dependencies>
        </setting>
        <setting id="wylloh.wallet_address" type="string" label="30512" help="">
          <level>0</level>
          <default></default>
          <control type="edit" format="string" />
          <dependencies>
            <dependency type="enable">
              <condition operator="is" setting="wylloh.wallet_status" comparing="connected">true</condition>
            </dependency>
          </dependencies>
        </setting>
        <setting id="wylloh.connect_wallet" type="action" label="30513" help="30514">
          <level>0</level>
          <data>RunScript(special://xbmc/scripts/wylloh/connect_wallet.py)</data>
          <control type="button" format="action">
            <dimensions>100%,10%</dimensions>
          </control>
          <dependencies>
            <dependency type="visible">
              <condition operator="is" setting="wylloh.wallet_address" comparing="">true</condition>
            </dependency>
          </dependencies>
        </setting>
        <setting id="wylloh.disconnect_wallet" type="action" label="30515" help="30516">
          <level>0</level>
          <data>RunScript(special://xbmc/scripts/wylloh/disconnect_wallet.py)</data>
          <control type="button" format="action">
            <dimensions>100%,10%</dimensions>
          </control>
          <dependencies>
            <dependency type="visible">
              <condition operator="is" setting="wylloh.wallet_address" comparing="">false</condition>
            </dependency>
          </dependencies>
        </setting>
      </group>
      <group id="3" label="30600">
        <setting id="wylloh.ipfs.primary_gateway" type="string" label="30601" help="30602">
          <level>0</level>
          <default>https://ipfs.io/ipfs/</default>
          <control type="edit" format="string" />
        </setting>
        <setting id="wylloh.ipfs.timeout" type="integer" label="30603" help="30604">
          <level>0</level>
          <default>30000</default>
          <control type="edit" format="integer" />
        </setting>
        <setting id="wylloh.ipfs.cache_size" type="integer" label="30605" help="30606">
          <level>0</level>
          <default>1024</default>
          <control type="edit" format="integer" />
        </setting>
        <setting id="wylloh.ipfs.cache_expiry" type="integer" label="30607" help="30608">
          <level>0</level>
          <default>72</default>
          <control type="edit" format="integer" />
        </setting>
        <setting id="wylloh.ipfs.enable_pinning" type="boolean" label="30609" help="30610">
          <level>0</level>
          <default>false</default>
          <control type="toggle" />
        </setting>
        <setting id="wylloh.ipfs.auto_pin_owned" type="boolean" label="30621" help="30622">
          <level>0</level>
          <default>true</default>
          <control type="toggle" />
          <dependencies>
            <dependency type="enable">
              <condition operator="is" setting="wylloh.ipfs.enable_pinning" comparing="true">true</condition>
            </dependency>
          </dependencies>
        </setting>
        <setting id="wylloh.ipfs.manage_gateways" type="action" label="30611" help="30612">
          <level>0</level>
          <data>RunScript(special://xbmc/scripts/wylloh/manage_gateways.py)</data>
          <control type="button" format="action">
            <dimensions>100%,10%</dimensions>
          </control>
        </setting>
        <setting id="wylloh.ipfs.clear_cache" type="action" label="30613" help="30614">
          <level>0</level>
          <data>RunScript(special://xbmc/scripts/wylloh/clear_ipfs_cache.py)</data>
          <control type="button" format="action">
            <dimensions>100%,10%</dimensions>
          </control>
        </setting>
      </group>
      <group id="4" label="30640">
        <setting id="wylloh.network.enable_participation" type="boolean" label="30641" help="30642">
          <level>0</level>
          <default>false</default>
          <control type="toggle" />
        </setting>
        <setting id="wylloh.network.storage_allocation" type="integer" label="30643" help="30644">
          <level>0</level>
          <default>10</default>
          <control type="edit" format="integer" />
          <dependencies>
            <dependency type="enable">
              <condition operator="is" setting="wylloh.network.enable_participation" comparing="true">true</condition>
            </dependency>
          </dependencies>
        </setting>
        <setting id="wylloh.network.storage_path" type="path" label="30645" help="30646">
          <level>0</level>
          <default>special://temp/wylloh-network</default>
          <constraints>
            <writable>true</writable>
          </constraints>
          <control type="button" format="path">
            <heading>30645</heading>
          </control>
          <dependencies>
            <dependency type="enable">
              <condition operator="is" setting="wylloh.network.enable_participation" comparing="true">true</condition>
            </dependency>
          </dependencies>
        </setting>
        <setting id="wylloh.network.bandwidth_limit" type="integer" label="30647" help="30648">
          <level>0</level>
          <default>1000</default>
          <control type="edit" format="integer" />
          <dependencies>
            <dependency type="enable">
              <condition operator="is" setting="wylloh.network.enable_participation" comparing="true">true</condition>
            </dependency>
          </dependencies>
        </setting>
        <setting id="wylloh.network.reward_address" type="string" label="30649" help="30650">
          <level>0</level>
          <default></default>
          <control type="edit" format="string" />
          <dependencies>
            <dependency type="enable">
              <condition operator="is" setting="wylloh.network.enable_participation" comparing="true">true</condition>
            </dependency>
          </dependencies>
        </setting>
        <setting id="wylloh.network.status" type="string" label="30651" help="">
          <level>0</level>
          <default>30652</default>
          <constraints>
            <options>
              <option label="30652">inactive</option>
              <option label="30653">starting</option>
              <option label="30654">active</option>
              <option label="30655">error</option>
            </options>
          </constraints>
          <control type="spinner" format="string" />
          <dependencies>
            <dependency type="enable">false</dependency>
          </dependencies>
        </setting>
      </group>
    </category>
  </section>
</settings> 