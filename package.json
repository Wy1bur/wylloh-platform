{
  "name": "wylloh-platform",
  "version": "0.1.0",
  "description": "An open protocol for movie tokenization and distribution",
  "private": true,
  "workspaces": [
    "client",
    "api",
    "contracts"
  ],
  "scripts": {
    "dev": "concurrently \"yarn dev:client\" \"yarn dev:api\"",
    "dev:client": "cd client && yarn start",
    "dev:api": "cd api && yarn dev",
    "build": "yarn build:client && yarn build:api",
    "build:client": "cd client && yarn build",
    "build:api": "cd api && yarn build",
    "test": "yarn test:contracts && yarn test:client && yarn test:api",
    "test:contracts": "cd contracts && yarn test",
    "test:client": "cd client && yarn test",
    "test:api": "cd api && yarn test",
    "lint": "yarn lint:contracts && yarn lint:client && yarn lint:api",
    "lint:contracts": "cd contracts && yarn lint",
    "lint:client": "cd client && yarn lint",
    "lint:api": "cd api && yarn lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "prepare": "husky install",
    "commit": "git-cz",
    "deploy:mumbai": "cd contracts && yarn deploy:mumbai",
    "deploy:polygon": "cd contracts && yarn deploy:polygon",
    "verify:mumbai": "cd contracts && yarn verify:mumbai",
    "verify:polygon": "cd contracts && yarn verify:polygon"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Wy1bur/wylloh-platform.git"
  },
  "keywords": [
    "blockchain",
    "movie",
    "tokenization",
    "nft",
    "polygon",
    "ipfs"
  ],
  "author": "Wylloh Protocol",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Wy1bur/wylloh-platform/issues"
  },
  "homepage": "https://github.com/Wy1bur/wylloh-platform#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "concurrently": "^8.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0",
    "prettier": "^3.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
